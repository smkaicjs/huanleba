<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/background15"
    android:padding="20dp"
    tools:context="com.example.office.main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/smk_sss"


        android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_name"
        android:layout_marginTop="320dp"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:paddingLeft="10dp"
        android:lines="1"
        android:hint="name"
        android:background="@drawable/yuanjiao_6"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/user_password"
        android:textAllCaps="false"
        android:lines="1"
        android:maxLength="10"
        android:singleLine="true"
        android:paddingLeft="10dp"
        android:textSize="25sp"
        android:background="@drawable/yuanjiao4"
        android:layout_marginTop="20dp"
        android:hint="@string/password"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/yuanjiao3"
        android:id="@+id/user_login"
        android:maxLength="10"
        android:singleLine="true"
        android:layout_gravity="center"
        android:text="进入神奇的世界"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/user_zhuce"/>



    </LinearLayout>



</LinearLayout>